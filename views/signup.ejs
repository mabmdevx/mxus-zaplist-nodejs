<%- include("layouts/top_unauth") %>


<div class="login-panel panel panel-default" style="margin-top:10% !important">
    <div class="panel-heading">
        <h3 class="panel-title">Signup</h3>
    </div>
    <div class="panel-body">
        <form role="form" method="post">
            <fieldset>
                <div class="form-group">
                    <div align="center" style="color:#FF3333"><%= msg_error %></div>
                </div>
                <div class="form-group">
                    <label>UserID</label><input id="app_user_id" name="app_user_id" class="form-control" placeholder="Enter your UserID" type="text" autofocus>
                </div>
                <div class="form-group">
                    <label>Password</label><input id="app_user_password" name="app_user_password" class="form-control" placeholder="Enter your Password" type="password">
                </div>
                <div class="form-group">
                    <label>Confirm Password</label><input id="app_user_confirm_password" name="app_user_confirm_password" class="form-control" placeholder="Confirm your Password" type="password">
                </div>
                <div class="form-group">
                    <label>Email</label><input id="app_user_email" name="app_user_email" class="form-control" placeholder="Enter your email" type="email">
                </div>
                <br/>
                <button type="submit" class="btn btn-lg btn-info btn-block">Signup</button>
                <br/>
            </fieldset>
            <input  id="app_postbk_signup" name="app_postbk_signup" type="hidden" value="1" />
        </form>
    </div>
</div>


<%- include("layouts/bottom_unauth") %>