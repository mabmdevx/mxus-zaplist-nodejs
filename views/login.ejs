<%- include("layouts/top_unauth") %>


<div class="login-panel panel panel-default" style="margin-top:10% !important">
    <div class="panel-heading">
        <h3 class="panel-title">Please Sign In</h3>
    </div>
    <div class="panel-body">
        <form role="form" method="post">
            <fieldset>
                <div class="form-group">
                    <div align="center" style="color:#FF3333"><%= error_msg %></div>
                </div>
                <div class="form-group">
                    <input id="app_user_id" name="app_user_id" class="form-control" placeholder="UserID" type="text" autofocus>
                </div>
                <div class="form-group">
                    <input id="app_password" name="app_password" class="form-control" placeholder="Password" type="password">
                </div>

                <button type="submit" class="btn btn-lg btn-success btn-block">Login</button>
                
            </fieldset>
            <input name="checkloginpostbk" type="hidden" id="checkloginpostbk" value="1" />
        </form>
    </div>
    <div class="panel-body">
        <a href="/signup" class="btn btn-lg btn-info btn-block">Signup</a>
    </div>
</div>
        

<%- include("layouts/bottom_unauth") %>